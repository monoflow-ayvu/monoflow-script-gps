{
  "name": "gps",
  "version": "0.1.0",
  "description": "Script para GPS. Tracking GPS, geolocalización, geocercas, etc.",
  "settingsSchema": {
    "display": "form",
    "components": [
      {
        "label": "Salvar posições GPS?",
        "tableView": false,
        "defaultValue": true,
        "key": "saveGPS",
        "type": "checkbox",
        "input": true
      },
      {
        "label": "Geocercas",
        "reorder": false,
        "addAnotherPosition": "bottom",
        "layoutFixed": false,
        "enableRowGroups": false,
        "initEmpty": false,
        "tableView": false,
        "defaultValue": [
          {}
        ],
        "key": "geofences",
        "type": "datagrid",
        "input": true,
        "components": [
          {
            "label": "Nome",
            "tableView": true,
            "unique": true,
            "validate": {
              "required": true
            },
            "key": "name",
            "type": "textfield",
            "input": true
          },
          {
            "label": "Tipo",
            "widget": "choicesjs",
            "tableView": true,
            "defaultValue": "default",
            "data": {
              "values": [
                {
                  "label": "Padrão",
                  "value": "default"
                },
                {
                  "label": "Velocidade Límite",
                  "value": "speedLimit"
                }
              ]
            },
            "validate": {
              "required": true
            },
            "key": "kind",
            "type": "select",
            "case": "lowercase",
            "input": true
          },
          {
            "label": "Geocerca WKT",
            "placeholder": "POLYGON(...",
            "tooltip": "Geocerca no formato WKT (Well-Known Text)",
            "autoExpand": false,
            "tableView": true,
            "validate": {
              "required": true,
              "custom": "valid = /^POLYGON(\\s+)?\\(.*\\)$/.test(input) ? true : 'Geocerca inválida';"
            },
            "key": "wkt",
            "type": "textarea",
            "input": true
          },
          {
            "label": "Velocidade límite",
            "suffix": "KM/H",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true
            },
            "key": "speedLimit",
            "conditional": {
              "show": true,
              "when": "geofence.kind",
              "eq": "speedLimit"
            },
            "type": "number",
            "input": true
          }
        ]
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "EULA",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.17.5",
    "@babel/plugin-transform-arrow-functions": "7.16.7",
    "@babel/preset-env": "7.16.11",
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@size-limit/preset-big-lib": "7.0.8",
    "@types/commander": "^2.12.2",
    "@types/firebase": "3.2.1",
    "@types/lodash": "4.14.179",
    "@types/uuid": "8.3.4",
    "@types/wellknown": "^0.5.1",
    "babel-loader": "8.2.3",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "^9.0.0",
    "compression-webpack-plugin": "9.2.0",
    "graphql": "^16.3.0",
    "graphql-request": "^4.1.0",
    "inquirer": "^8.2.1",
    "mobx-keystone": "0.67.1",
    "semver": "^7.3.5",
    "size-limit": "7.0.8",
    "ts-loader": "9.2.8",
    "typed-emitter": "2.1.0",
    "typescript": "4.6.2",
    "webpack": "5.70.0",
    "webpack-cli": "4.9.2"
  },
  "dependencies": {
    "@fermuch/monoutils": "^0.0.31",
    "@fermuch/telematree": "^9.20.0",
    "cross-fetch": "3.1.5",
    "firebase": "9.6.8",
    "geo-point-in-polygon": "^1.0.0",
    "lodash": "4.17.21",
    "mobx": "6.4.2",
    "wellknown": "^0.5.0"
  }
}
